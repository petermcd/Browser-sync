{
  "manifest_version": 2,
  "name": "Bookmark Sync",
  "version": "1.0",
  "homepage_url": "https://petermcdonald.co.uk/bookmark-sync.html",
  "description": "A Firefox extension that allows the syncing of bookmarks from a JSON file.",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "admin@rockprofile.com"
    }
  }
}
